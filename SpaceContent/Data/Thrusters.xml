<?xml version="1.0" encoding="utf-8" ?>
<XnaContent>
  <Asset Type="Space.ComponentSystem.Factories.ThrusterFactory[]">
    <!-- The type of thruster each player starts with, which has fixed
         values (enforced by min an max being equal). -->
    <Item>
      <Name>StarterThruster</Name>
      <Icon>Textures/Icons/Buffs/stabilisator</Icon>
      <GuaranteedAttributes>
        <Item>4 AccelerationForce</Item>
        <Item>2 RotationForce</Item>
        <Item>2.5 ThrusterEnergyConsumption</Item>
      </GuaranteedAttributes>
    </Item>
    
    <!-- NPC thrusters -->
    <Item>
      <Name>L1_AI_Thruster</Name>
      <GuaranteedAttributes>
        <Item>3.5 to 4 AccelerationForce</Item>
        <Item>1.25 to 1.75 RotationForce</Item>
        <Item>2.25 to 2.75 ThrusterEnergyConsumption</Item>
      </GuaranteedAttributes>
    </Item>
  </Asset>
</XnaContent>
